<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Pages</th>
        <th>Author</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(function(b) { %>
        <tr>
          <td><%= b.title %></td>
          <td><%= b.pages %></td>
          <div>
           <% if (b.author) { %>
            <td><%=b.author.name %></td>
           <% } else { %>
            <td></td>
          <% } %>
          </div>
          <td><a href="/books/<%= b._id %>">DETAILS</a></td>
          <td><a href="/books/<%= b._id %>/edit">EDIT</a></td>
          <td>
            <form action="/books/<%= b._id %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    

<%- include('../partials/footer') %>